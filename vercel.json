{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/api/$1" },
    { "source": "/(.*)", "destination": "/frontend/dist/$1" }
  ],
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "buildCommand": "npm run build", "outputDirectory": "dist" }
    },
    {
      "src": "backend/api/**/*.py",
      "use": "@vercel/python"
    }
  ]
}
